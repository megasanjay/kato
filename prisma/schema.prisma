// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Background {
  id String @id @default(cuid())

  date  String
  theme String

  imageID     String @unique
  url         String
  unsplashUrl String

  index Int

  description String

  username     String
  authorName   String
  portfolioUrl String

  city    String
  country String
}
